<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sell"
    android:orientation="vertical"
    android:background="@color/white">

    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text=" Sell an item"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="19dp"
        android:textStyle="bold"
        android:background="@color/white"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Add up to 20 photos."
                android:textColor="@color/black"
                android:textSize="16dp">

            </TextView>

            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_add_24"
                android:text="  Upload Photos">

            </android.widget.Button>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:text="Title:">

            </EditText>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:text="Describe your item:">

            </EditText>


            <android.widget.Button
                android:id="@+id/category_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="20dp"
                android:lineHeight="30dp"
                android:text="Category"
                android:textAlignment="textStart"
                android:textSize="20dp" />

            <android.widget.Button
                android:id="@+id/brand_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="20dp"
                android:lineHeight="30dp"
                android:text="Brand"
                android:textAlignment="textStart"
                android:textSize="20dp" />

            <android.widget.Button
                android:id="@+id/condition_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="20dp"
                android:lineHeight="30dp"
                android:text="Condition"
                android:textAlignment="textStart"
                android:textSize="20dp" />

            <android.widget.Button
                android:id="@+id/price_btn"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="20dp"
                android:lineHeight="30dp"
                android:text="Price"
                android:textAlignment="textStart"
                android:textSize="20dp" />

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/white"
                android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="20dp"
                android:lineHeight="30dp"
                android:text="What do you think about our Upload Process"
                android:textAlignment="textStart"
                android:textSize="20dp" />

            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="UPLOAD"
                android:backgroundTint="@color/teal_700"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/white">

            </android.widget.Button>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="A professional seller posing as a customer or a \n non-professional on Turbocharger..."
                android:layout_margin="20dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center">

            </TextView>


        </LinearLayout>

    </ScrollView>


</FrameLayout>